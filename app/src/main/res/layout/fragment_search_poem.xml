<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.heytap.wearable.support.widget.HeyBackTitleBar
            android:id="@+id/search_poem_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:heyText="搜索古诗"
            app:heyShowClock="true" />

        <EditText
            android:id="@+id/poem_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            style="@style/HeyEditTextStyle" />

        <com.heytap.wearable.support.widget.HeyShapeButton
            android:id="@+id/poem_search_button"
            style="@style/HeyBigShapeButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="搜索" />
            
        <LinearLayout
            android:id="@+id/search_history_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>